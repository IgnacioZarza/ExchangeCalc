@using ExchangeCalc.Application.Extensions
@model ExchangeCalc.Application.ViewModels.DashboardViewModel
@{
    ViewData["Title"] = "Calculadora tipo de cambio";
}

<div class="container mt-4">

    <!-- Botón para iniciar el tutorial manual -->
    <div class="text-end mb-3">
        <button id="startTourBtn" class="btn btn-outline-secondary btn-sm">
            <i class="bi bi-info-circle"></i> Ver tutorial
        </button>
    </div>

    <!-- Encabezado -->
    <div class="text-center mb-5 p-3 rounded-3 bg-light shadow-sm">
        <h2 class="fw-bold text-dark mb-2">Panel principal</h2>
        <p class="text-muted mb-0">Consulta y gestiona tus tipos de cambio favoritos</p>
    </div>

    <!-- Card de filtros -->
    <div id="card-filtros" class="card border-0 shadow-sm mb-4">
        <div class="card-body">
            <h5 class="card-title text-secondary mb-3">
                <i class="bi bi-sliders"></i> Filtros
            </h5>
            <form method="get" class="row g-3 align-items-end">
                <div class="col-md-4">
                    <label class="form-label fw-semibold text-dark">Fecha</label>
                    <input type="date" name="date" value="@Model.Date.ToString("yyyy-MM-dd")" class="form-control border-secondary" />
                </div>
                <div class="col-md-4">
                    <label class="form-label fw-semibold text-dark">Monto (@Model.BaseCurrency)</label>
                    <input type="number" step="0.01" name="amount" value="@Model.Amount" class="form-control border-secondary" />
                </div>
                <div class="col-md-4 d-grid">
                    <button class="btn btn-dark btn-lg shadow-sm">
                        <i class="bi bi-arrow-repeat"></i> Actualizar
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Card moneda principal -->
    <div id="card-moneda" class="card border-0 shadow-sm mb-4">
        <div class="card-body">
            <h5 class="card-title text-secondary mb-3">
                <i class="bi bi-currency-exchange"></i> Moneda principal:
                <span class="fw-bold text-secondary">@Model.BaseCurrency</span>
            </h5>
            <form method="post" asp-action="SetPrimary" class="row g-2">
                <div class="col-md-6">
                    <select name="currency" class="form-select border-secondary">
                        @if (Model.AvailableCurrencies != null)
                        {
                            foreach (var kv in Model.AvailableCurrencies)
                            {
                                <option value="@kv.Key">@kv.Key - @kv.Value</option>
                            }
                        }
                    </select>
                </div>
                <div class="col-md-3 d-grid">
                    <button class="btn btn-outline-dark shadow-sm">
                        <i class="bi bi-check2-circle"></i> Establecer
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Card favoritas -->
    <div id="card-favoritas" class="card border-0 shadow-sm mb-4">
        <div class="card-body">
            <h5 class="card-title text-secondary mb-3">
                <i class="bi bi-heart-fill"></i> Favoritas
            </h5>
            <form method="post" asp-action="AddFavorite" class="row g-2 mb-4">
                <div class="col-md-6">
                    <select name="currency" class="form-select border-secondary">
                        @if (Model.AvailableCurrencies != null)
                        {
                            foreach (var kv in Model.AvailableCurrencies)
                            {
                                <option value="@kv.Key">@kv.Key - @kv.Value</option>
                            }
                        }
                    </select>
                </div>
                <div class="col-md-3 d-grid">
                    <button class="btn btn-secondary shadow-sm">
                        <i class="bi bi-plus-circle"></i> Agregar
                    </button>
                </div>
            </form>

            <div class="table-responsive">
                <table class="table table-hover align-middle shadow-sm">
                    <thead class="table-light">
                        <tr>
                            <th>Moneda</th>
                            <th>Tasa de Cambio</th>
                            <th>Conversión</th>
                            <th class="text-center">Acción</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var r in Model.Results)
                        {
                            <tr>
                                <td class="fw-bold">@r.Currency</td>
                                <td>@r.Rate.ToCurrency(r.Currency)</td>
                                <td>@r.ConvertedAmount.ToCurrency(r.Currency)</td>
                                <td class="text-center">
                                    <form method="post" asp-action="RemoveFavorite" class="d-inline">
                                        <input type="hidden" name="currency" value="@r.Currency" />
                                        <button class="btn btn-sm btn-outline-danger shadow-sm">
                                            <i class="bi bi-trash"></i> Remover
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>

<!-- Bootstrap icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">

<!-- Intro.js -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/intro.js/7.2.0/introjs.min.css" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/intro.js/7.2.0/intro.min.js"></script>

<!-- SweetAlert2 -->
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<!-- Estilos personalizados -->
<link href="~/css/dashboard-tour.css" rel="stylesheet" />

<!-- Tutorial -->
<script src="~/js/dashboard-tour.js"></script>

